#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int n;
    double x;
    long double S = 0;
    long double factorial = 1; 

    cout << "Ingrese el valor de X: ";
    cin >> x;
    cout << "Ingrese el valor de n: ";
    cin >> n;

    for (int k = 1; k <= n; k++) {
        if (k > 1) {
            factorial *= k; 
        }
        S += pow(x, k) / factorial; 
    }

    cout << "El resultado de la serie es: " << S << endl;

    return 0;
}
